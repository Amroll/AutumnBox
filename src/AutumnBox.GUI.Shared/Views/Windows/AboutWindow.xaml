<custom:NiceWindow
    xmlns:custom="clr-namespace:AutumnBox.GUI.Views.Custom"
    x:Class="AutumnBox.GUI.Views.Windows.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:panel="clr-namespace:AutumnBox.GUI.Views.Controls"
    mc:Ignorable="d"
    ShowInTaskbar="False"
   ResizeMode="NoResize"
    WindowStartupLocation="CenterOwner"
      Background="{DynamicResource RegionBrush}"
    FontFamily="{DynamicResource AutumnBox.Font}"
        Title="{DynamicResource App.Name}" Height="430" Width="700">
    <DockPanel >
        <panel:PanelAbout  Effect="{DynamicResource EffectShadow2}" DockPanel.Dock="Left"/>
        <panel:PanelUpdateLogs DockPanel.Dock="Right"/>
    </DockPanel>
</custom:NiceWindow>
